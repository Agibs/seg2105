<h1>Update your profile</h1>

<div>
	<div>
		<%= form_for(@user) do |f| %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :age %>
			<%= f.text_field :age %>

			<%= f.label :height %>
			<%= f.number_field :height %>

			<%= f.label :weight %>
			<%= f.number_field :weight %>

			<%= f.label :goal %>
			<%= f.text_field :goal, :size => 150%> 

			<%= f.label :password %>
			<%= f.password_field :password %> 

			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation %>

			<%= f.submit "Update profile" %>
		<% end %>
	</div>
</div>